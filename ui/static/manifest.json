{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "ORF Archiv",
  "short_name": "ORF Archiv",
  "description": "ORF News länger als 24h verfügbar",
  "categories": ["news"],
  "id": "/",
  "start_url": "/",
  "lang": "de-AT",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#374151",
  "background_color": "#000",
  "icons": [
    {
      "src": "images/icon192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "images/icon_solid192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/icon512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "images/icon_solid512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Lesezeichen",
      "url": "/bookmarks"
    },
    {
      "name": "Einstellungen",
      "url": "/settings"
    }
  ]
}

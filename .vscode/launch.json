{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "UI Dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"]
    },
    {
      "name": "UI Build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build"]
    },
    {
      "name": "UI Preview",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "preview"]
    },
    {
      "name": "UI Generate CSP Script Hashes",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "generate:csp-script-hashes"]
    },
    {
      "name": "UI Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:ui"]
    },
    {
      "name": "UI Storybook",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "storybook"]
    }
  ]
}
